<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Angkringan_Omahmu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Angkringan_Omahmu.styles.css" asp-append-version="true" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row g-0">
            <!-- Overlay for mobile -->
            <div class="overlay" id="overlay"></div>

            <!-- Sidebar -->
            <div class="sidebar" id="sidebar">
                <!-- Sidebar Header with role -->
                <div class="sidebar-header">
                    <div class="profile-info">
                        <div>
                            <div style="font-weight: 500;">Dashboard</div>
                        </div>
                    </div>
                    <button class="sidebar-toggle-btn" id="sidebar-toggle">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </div>

                <!-- Sidebar Menu -->
                <div class="sidebar-menu">
                    <a asp-controller="Home" asp-action="Index" class="menu-item">
                        <i class="bi bi-cart-fill text-primary"></i>
                        <span>Point of Sales</span>
                    </a>
                    <a asp-controller="Makanan" asp-action="Index" class="menu-item">
                        <i class="bi bi-bag-check-fill text-info"></i>
                        <span>Makanan</span>
                    </a>
                    <a asp-controller="Minuman" asp-action="Index" class="menu-item">
                        <i class="bi bi-cup-straw text-success"></i>
                        <span>Minuman</span>
                    </a>
                    <a asp-controller="Inventory" asp-action="Index" class="menu-item">
                        <i class="bi bi-box-seam text-warning"></i>
                        <span>Inventory</span>
                    </a>
                    <a asp-controller="User" asp-action="Index" class="menu-item">
                        <i class="bi bi-people text-danger"></i>
                        <span>Teams</span>
                    </a>
                    <a asp-controller="Login" asp-action="login" class="menu-item">
                        <i class="bi bi-gear text-secondary"></i>
                        <span>Settings</span>
                    </a>
                </div>

                <!-- Sidebar Footer with Logout -->
                <div class="sidebar-footer">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="logout-btn">
                            <i class="bi bi-box-arrow-left me-2"></i>
                            <span>Log Out</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
</body>
</html>