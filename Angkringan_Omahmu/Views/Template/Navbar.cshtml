<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2">
        <div class="container-fluid p-0">
            <!-- Brand/Title on the left with class to hide on mobile -->
            <a class="navbar-brand fw-bold ms-2 ps-2 hide-on-mobile" href="#">Angkringan Omahmu / Cashier</a>
                      
            <!-- Spacer to push date to the right -->
            <div class="ms-auto"></div>
            
            <!-- Real-time date display with class to hide on mobile -->
            <div class="d-flex align-items-center p-3 hide-on-mobile">
                <span class="text-muted" id="currentDate"></span>
            </div>
        </div>
    </nav>
    
    <script src="~/js/navbar.js" asp-append-version="true"></script>
</body>
</html>
