@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<!-- Dashboard with responsive cards -->
<div class="container-fluid p-3 p-lg-4">
    <div class="row g-3">
        <!-- Total Sales Amount Card -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-container me-2">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <span class="card-title">Total Sales Amount</span>
                    </div>
                    <div class="value-container d-flex justify-content-between align-items-baseline mt-auto">
                        <h2 class="card-value">12,650.00</h2>
                        <span class="card-unit">Rupiah</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Product Sales Card -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-container me-2">
                            <i class="bi bi-box"></i>
                        </div>
                        <span class="card-title">Total Product Sales</span>
                    </div>
                    <div class="value-container d-flex justify-content-between align-items-baseline mt-auto">
                        <h2 class="card-value">1,250</h2>
                        <span class="card-unit">Items</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Customers Card -->
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-2">
                        <div class="icon-container me-2">
                            <i class="bi bi-people"></i>
                        </div>
                        <span class="card-title">Total Customers</span>
                    </div>
                    <div class="value-container d-flex justify-content-between align-items-baseline mt-auto">
                        <h2 class="card-value">400</h2>
                        <span class="card-unit">Persons</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>